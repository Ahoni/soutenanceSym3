        <div class="container">
            <div class = "row justify-content-around p-2" >

                   {% for product in products %}
                    <div class="card col-lg-3 mb-2 p-1 m-1" >
                        <img src="https://placehold.it/280x300 " class="card-img-top" >
                        <div class="card-body d-flex justify-content-evenly p-2">
                            <div class="col-9">
                                <p class="name">{{ product.name }}</p>
                                <p class="origine">{{ product.origin }}</p>

                                   <a href="{{ path('mode_detail',{'id':product.id})}}">
                                    <button type="button" class="btn btn-success">Ajouter au panier</button>
                            </a>
                            </div>
                            <div class="col-5 mb-0"style="height: 4rem;" >
                                <p class="prix">{{ product.price }}</p>
                                <a href="{{ path('mode_detail',{'id':product.id})}}">
                                    <button type="button" class="btn btn-warning">voir +</button>
                                </a>
                                
                            </div>
                         
                            {# <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p> #}
                        </div>
                    </div>
                   {% endfor %}
        </div>

{% endblock %}
