		</head>
		<body>
			{# header + navbar #}
			<div class="head_nav">
				<figure class="espace_logo">
					<a href="{{ asset('/') }}">
						src="{{ asset('images/logo.png') }}" alt="Image du logo"></a>
					<p class="marque">E-Concept Store</p>
				</head>
			</html>
		</body>
	</html>
</figure>
<div class="espace_liens">
	<div class="menu_icones">

		{% if app.user %}

			{% if app.user.roles[0] == "ROLE_ADMIN" %}
				<a href="{{ path('dashboard') }}">
					<i class="fas fa-suitcase mx-2"></i>
					<p>Espace Admin</p>
				</a>
			{% endif %}

			<a href="{{ path('security_logout') }}" class="le_compte">
				<i class="fas fa-user mx-2"></i>
				<p>Déconnexion</p>
			</a>

		{% else %}
			<a href="{{ path('security_new_login') }}" class="le_compte">
				<i class="fas fa-user-plus mx-2"></i>
				<p>Inscription</p>
			</a>
			<a href="{{ path('security_login') }}" class="le_compte">
				<i class="fas fa-user  mx-2"></i>
				<p>Connexion</p>
			</a>
		{% endif %}
		<a href="" class="le_panier">
			<i class="fas fa-shopping-bag  mx-2"></i>
			<p>Panier</p>
		</a>


	</div>

	<nav class="navbar navbar-expand-lg navbar-light menu_liens">
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbarNavDropdown">
			<ul class="navbar-nav">
				<li class="nav-item active">
					<a class="nav-link" href="{{ asset('/') }}">Accueil
						<span class="sr-only">(current)</span>
					</a>
				</li>
				<li class="nav-item active dropdown">
					<a class="nav-link dropdown-toggle" href="{{ asset('/store') }}" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
						Store
					</a>
					<div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
						<a class="dropdown-item" href="{{ asset('/mode') }}">Mode</a>
						<a class="dropdown-item" href="{{ asset('/beauty') }}">Cosmétique</a>
						<a class="dropdown-item" href="{{ asset('/food') }}">Alimentation</a>
						<a class="dropdown-item" href="{{ asset('/store') }}">Voir tout</a>
					</div>
				</li>
				<li class="nav-item">
					<a class="nav-link active" href="{{ asset('/blog') }}">Blog</a>
				</li>
				<li class="nav-item">
					<a class="nav-link active" href="{{ asset('/contact') }}">Contact</a>
				</li>
			</ul>
		</div>
	</nav>
