{% extends 'base.html.twig' %}

{% block title %}
	Liste des utilisateurs
{% endblock %}

{% block body %}
	<div class="container">
		<div class="col">
			<div class="alert alert-info">
				<h1 class="alert-heading my-3">Liste des utilisateurs et leur rôle</h1>
				<table class="table text-center">
					<thead>
						<tr>
							<th>Id</th>
							<th>Prénom et nom</th>
							<th>Email</th>
							<th>Roles</th>
							<th>actions</th>
						</tr>
					</thead>
					<tbody>
						{% for user in users %}
							<tr>
								<td>{{ user.id }}</td>
								<td>{{ user.fullName }}</td>
								<td>{{ user.email }}</td>
								<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
								<td>
									<a href="{{ path('user_show', {'id': user.id}) }}" class="mx-3">
										<i class="fas fa-eye"></i>
										Voir
									</a>
									<a href="{{ path('user_edit', {'id': user.id}) }}" class="mx-2">
										<i class="fas fa-user-edit"></i>
										Modifier
									</a>
									<a href="{{ path('user_delete', {'id': user.id}) }}">
										<i class="fas fa-user-slash"></i>
										Supprimer
									</a>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="6">no records found</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>

				<a class="btn btn-dark" href="{{ path('user_new') }}">Ajouter un utilisateur</a>
			</div>
		</div>
	</div>
{% endblock %}
