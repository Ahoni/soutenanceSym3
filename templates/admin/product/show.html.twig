{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1 class="my-5 text-center">{{product.name}}</h1>

    <table class="table container border shadow col-8">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Origin</th>
                <td>{{ product.origin }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description | raw }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ product.quantity }}</td>
            </tr>
        </tbody>
    </table>
<div class="d-flex justify-content-around align-items-center col-6 m-auto">
    <a class="btn btn-warning" href="{{ path('product_index') }}">Retour Ã  la liste des produits</a>

    <a class="btn btn-info" href="{{ path('product_edit', {'id': product.id}) }}">Modifier</a>

    {{ include('admin/product/_delete_form.html.twig') }}
</div>
{% endblock %}
